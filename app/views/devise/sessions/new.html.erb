<%= render "layouts/sessions_navbar", title: "LOGIN", subtitle: "Log In" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-100 mt-3' }) do |f| %>
  <div class="input-group mb-0">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email', aria: { label: 'Email' } %>
  </div>

  <div class="input-group mb-3">
    <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: 'form-control', placeholder: 'Password', aria: { label: 'Password' } %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field ms-2">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me , class: "form-check-label"%>
    </div>
  <% end %>

  <div class="actions d-flex justify-content-center align-items-center mb-3">
    <%= f.submit "Log in", class: 'btn btn-primary bg-custom' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>